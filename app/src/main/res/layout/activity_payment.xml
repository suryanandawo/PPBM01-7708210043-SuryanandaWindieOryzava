<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bekgronkedua"
    tools:context=".Payment">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:src="@drawable/payment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="pilih salah satu dibawah ini!"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp">

        <RadioButton
            android:id="@+id/radioButtonOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="BCA M-Banking"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioButtonOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:fontFamily="@font/poppins_semibold"
            android:text="BCA Virtual Account"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioButtonOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Gopay"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioButtonOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Dana"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioButtonOption5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="LinkAja"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

        <RadioButton
            android:id="@+id/radioButtonOption6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="PayPal"
            android:textColor="#FFFFFF"
            android:textSize="20dp"/>

    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bayar"
        android:layout_width="198dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="Bayar"
        android:textAllCaps="false"
        android:textColor="#0BEAA7"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="431dp"
        android:background="@drawable/rectangle21"/>

    <ImageView
        android:layout_width="392dp"
        android:layout_height="376dp"
        android:layout_marginTop="550dp"
        android:src="@drawable/saly2" />

    <TextView
        android:id="@+id/kembalilah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="555dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="kembali"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

</RelativeLayout>